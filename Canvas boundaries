from Tkinter import *
import time
window = Tk()
canvas = Canvas(window, width=500, height=500, bg='white')
canvas.pack(padx=10,pady=10)

#creates robot class and attributes 
class robot:
    def __init__(self,x,y, x1, y1, speed=1.0, size=4, colour='red'):
 
        self.vx = 5.0
        self.vy = 2.5
        self.x = x
        self.y = y
        self.speed = speed
        self.size = size
        self.x1 = self.x + self.size
        self.y1 = self.y + self.size

        self.colour = colour
  
#creates roam function that allows robot object to roam around the canvas
    def roam (self):
        self.collison()
        self.x += self.vx
        self.y += self.vy
        self.x1 = self.x + self.size
        self.y1 = self.y + self.size

        self.canvas.coords(self.shape, self.x, self.y, self.x + self.size, self.y + self.size)
        self.canvas.update()
        
        
# this function defines the boundaries
    def boundries(self, vx, vy, x_min, y_min, x_max, y_max):

        self.vx = vx
        self.vy = vy

        
        self.x_min = x_min
        self.y_min = y_min
        self.x_max = x_max 
        self.y_max = y_max

             
    def drawrobot(self, canvas):
        self.canvas = canvas
        self.shape = canvas.create_rectangle(self.x, self.y, self.x + self.size, self.y + self.size, fill=self.colour)
        
#This function detects wether the robot has reachd a boundary limit and changes its velocity
    def collison(self):
        if self.x1 >= self.x_max:
            self.vx = -10.0
            
        if self.y <= self.y_min:
            self.vy = 5.0
            
        if self.y1 >= self.y_max:
            self.vy = -5.0
            
        if self.x <= self.x_min:
            self.vx = 10.0
            
#Creates robot object
r2d2 = robot(150, 150,0,0, speed = 1, size= 30, colour = 'red')
#draws robot shape on the canvas
r2d2.drawrobot(canvas)
#Boundary limits
x_min = 0.0
y_min = 0.0
x_max = 500.0
y_max = 500.0
#velocity
vx = 10.0
vy = 5.0

#implements boundary function
r2d2.boundries(vx, vy, x_min, y_min, x_max, y_max) 

for t in range(1,500):
    x,y,x1,y1=canvas.coords(r2d2.shape)
#implements roam runction      
    r2d2.roam()
  
    time.sleep(0.1)
                 
window.mainloop()
