# Putting a gif image from a URL on a canvas

from Tkinter import *

import Tkinter as tk
root = tk.Tk()

import urllib
URL = "https://lh4.googleusercontent.com/XbYGguteht8fJL1nrIZ5MteDYaEmx6ARjaX5TzcGBMdeZ9OYLiTBpX93haTbxEHxEpVgCvE2ias=w1896-h816"
u = urllib.urlopen(URL)
raw_data = u.read()
u.close()

import base64
b64_data = base64.encodestring(raw_data)
gif1 = tk.PhotoImage(data=b64_data)

# create the canvas

canvas = Canvas(width = 500, height = 400, bg = 'white')

# pack the canvas into a frame/form

canvas.pack(expand = YES, fill = BOTH)

# put gif image on canvas
# pic's upper left corner (NW) on the canvas is at x=0 y=0

canvas.create_image(0, 0, image = gif1, anchor = NW)

mainloop()
